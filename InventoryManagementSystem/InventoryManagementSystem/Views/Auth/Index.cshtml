@model InventoryManagementSystem.user

@{
    Layout=null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/Content/simple-sidebar.css" rel="stylesheet">
    <link href="~/scripts/jquery-1.10.2.js" rel="stylesheet">
    <link href="~/scripts/jquery.validate.js" rel="stylesheet">
    <link href="~/scripts/jquery.validate.unobtrusive.js" rel="stylesheet">
    <link href="~/scripts/bootstrap.bundle.min.js" rel="stylesheet">
    <title>Login</title>

</head>
<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container">
            <h4>Inventory Management Portal</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row offset-md-4" style="margin-top:5%">
                <div class="form-group col-lg-7" >
                    @Html.LabelFor(model => model.u_username, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.u_username, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>

            <div class="row offset-md-4">
                <div class="form-group col-lg-7">
                    @Html.LabelFor(model => model.u_password, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.u_password, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>



            <div class="row offset-md-4">
                <div class="form-group col-lg-7">
                    <input type="submit" value="Login" class="btn btn-primary btn-block" />
                </div>
            </div>
        </div>
    }

</body>
</html>