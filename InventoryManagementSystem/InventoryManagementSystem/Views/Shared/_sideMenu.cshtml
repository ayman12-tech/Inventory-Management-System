

@using System.Web.Mvc.Html;
@using System.Web.Mvc;
@using System.Web;


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Inventory Management Portal</title>


    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/Content/simple-sidebar.css" rel="stylesheet">
    <link href="~/scripts/jquery-1.10.2.js" rel="stylesheet">
    <link href="~/scripts/bootstrap.bundle.min.js" rel="stylesheet">


</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">Inventory Portal </div>
            <div class="list-group list-group-flush">
                <a href="~/Users/Index" class="list-group-item list-group-item-action bg-light">Users</a>
                <a href="~/Roles/Index" class="list-group-item list-group-item-action bg-light">Roles</a>
                <a href="~/Categories/Index" class="list-group-item list-group-item-action bg-light">Categories</a>

            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Show/Hide</button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">

                        <li class="nav-item active">
                            Welcome @Session["name"] @Html.ActionLink("Logout", "Logout", "Auth")
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
              @RenderBody();
            </div>
        </div>
      

    </div>
  
    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>

</body>

</html>
